<div class="max-w-2xl mx-auto mt-8 space-y-10">

  <!-- 今日のチャレンジ -->
  <section>
    <h2 class="text-lg font-bold mb-3">📍 今日のチャレンジ</h2>

    <% if @today_challenges.any? %>
      <% @today_challenges.each do |challenge| %>
        <div class="p-4 border rounded mb-2">
          <h3 class="font-semibold text-gray-800">
            <%= challenge.title %>
          </h3>
          <p class="text-xs text-gray-500 mb-1">
            作成者：<%= challenge.user.name %>
          </p>
          <div class="text-sm text-gray-700">
            ⏰ <%= challenge.target_time.strftime("%H:%M") %>
            (<%= challenge.solo? ? "ソロ" : "みんなで" %>)
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500 text-sm">今日のチャレンジはありません</p>
    <% end %>
  </section>

  <!-- 参加中の未来チャレンジ -->
  <section>
    <h2 class="text-lg font-bold mb-3">🗓 参加中のチャレンジ</h2>

    <% if @upcoming_challenges.any? %>
      <% @upcoming_challenges.each do |challenge| %>
        <div class="p-4 border rounded mb-2">
          <h3 class="font-semibold text-gray-800">
            <%= challenge.title %>
          </h3>
          <p class="text-xs text-gray-500 mb-1">
            作成者：<%= challenge.user.name %>
          </p>
          <div class="text-sm text-gray-700">
            📅 <%= challenge.target_date %>
            ⏰ <%= challenge.target_time.strftime("%H:%M") %>
          </div>
          <div class="mt-3 flex justify-end">
            <%= link_to "詳細を見る",
                  challenge_path(challenge),
                  class: "text-sm text-orange-600 hover:underline" %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500 text-sm">参加中のチャレンジはありません</p>
    <% end %>
  </section>

  <!-- 参加可能なマルチチャレンジ -->
  <section>
    <h2 class="text-lg font-bold mb-3">🤝 参加できるチャレンジ</h2>

    <% if @open_challenges.any? %>
      <% @open_challenges.each do |challenge| %>
        <div class="p-4 border rounded mb-2">
          <h3 class="font-semibold text-gray-800">
            <%= challenge.title %>
          </h3>
          <p class="text-xs text-gray-500 mb-1">
            作成者：<%= challenge.user.name %>
          </p>
          <div class="text-sm text-gray-700">
            ⏰ <%= challenge.target_time.strftime("%H:%M") %>
            （<%= challenge.participations.count %> / <%= challenge.capacity %>）
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-500 text-sm">参加可能なチャレンジはありません</p>
    <% end %>
  </section>

</div>
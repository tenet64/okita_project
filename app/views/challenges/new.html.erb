<div class="max-w-md mx-auto mt-10 bg-white p-6 rounded-lg shadow">
  <h1 class="text-xl font-bold mb-6 text-gray-800">
    チャレンジを作成
  </h1>

  <%= form_with model: @challenge, local: true do |f| %>

    <% if @challenge.errors.any? %>
      <div class="mb-4 text-sm text-red-600">
        <ul>
          <% @challenge.errors.full_messages.each do |msg| %>
            <li>• <%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <!-- タイトル -->
    <div class="mb-4">
      <%= f.label :title, "チャレンジ名", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_field :title,
            class: "w-full rounded border-gray-300 focus:border-orange-400 focus:ring-orange-400" %>
    </div>

    <!-- 説明 -->
    <div class="mb-4">
      <%= f.label :description, "説明", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.text_area :description,
            rows: 4,
            class: "w-full rounded border-gray-300 focus:border-orange-400 focus:ring-orange-400" %>
    </div>

    <!-- モード選択 -->
    <div class="mb-4">
      <%= f.label :mode, "モード", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.select :mode,
            [["ソロ", "solo"], ["マルチ", "multi"]],
            {},
            class: "w-full rounded border-gray-300 focus:border-orange-400 focus:ring-orange-400" %>
    </div>

    <!-- 日付 -->
    <div class="mb-4">
      <%= f.label :target_date, "日付", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.date_field :target_date,
            class: "w-full rounded border-gray-300 focus:border-orange-400 focus:ring-orange-400" %>
    </div>

    <!-- 時間 -->
    <div class="mb-4">
      <%= f.label :target_time, "時間", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.time_field :target_time,
            class: "w-full rounded border-gray-300 focus:border-orange-400 focus:ring-orange-400" %>
    </div>

    <!-- 定員（マルチ用） -->
    <div class="mb-6">
      <%= f.label :capacity, "定員（マルチのみ）", class: "block text-sm font-medium text-gray-700 mb-1" %>
      <%= f.number_field :capacity,
            min: 2,
            class: "w-full rounded border-gray-300 focus:border-orange-400 focus:ring-orange-400" %>
    </div>

    <!-- 送信 -->
    <%= f.submit "チャレンジを作成",
          class: "w-full bg-orange-500 text-white py-2 rounded hover:bg-orange-600" %>

  <% end %>
</div>
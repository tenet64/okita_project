<div class="min-h-screen flex flex-col items-center bg-gray-50">

  <!-- メインブロック -->
  <div class="w-full max-w-lg bg-white px-10 py-10 mt-10 shadow-md rounded">

    <h1 class="text-center text-3xl font-semibold mb-8">新規登録</h1>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "space-y-6") do |f| %>

      <%= render "devise/shared/error_messages", resource: resource %>

      <!-- 名前 -->
      <div>
        <label class="block text-sm font-medium text-gray-700">名前</label>
        <%= f.text_field :name,
              class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2" %>
      </div>

      <!-- メール -->
      <div>
        <label class="block text-sm font-medium text-gray-700">メールアドレス</label>
        <%= f.email_field :email, autocomplete: "email",
              class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2" %>
      </div>

      <!-- パスワード -->
      <div>
        <label class="block text-sm font-medium text-gray-700">パスワード</label>
        <% if @minimum_password_length %>
          <p class="text-xs text-gray-500 mb-1">（最低 <%= @minimum_password_length %> 文字）</p>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password",
              class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2" %>
      </div>

      <!-- パスワード確認 -->
      <div>
        <label class="block text-sm font-medium text-gray-700">パスワード確認</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password",
              class: "mt-1 w-full border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 px-3 py-2" %>
      </div>

      <!-- ボタン -->
      <div>
        <%= f.submit "新規登録",
              class: "w-full py-3 bg-gray-800 text-white rounded-md hover:bg-gray-900 transition" %>
      </div>

    <% end %>

    <div class="text-center mt-6 text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>

</div>